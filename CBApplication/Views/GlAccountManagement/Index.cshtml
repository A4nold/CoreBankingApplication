@model IEnumerable<CBApplication.Core.Models.GlAccountManagement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top: 10px">
    <p>
        @Html.ActionLink(" Add new GlAccount", "Create",null,new{@class="fa fa-plus btn btn-primary btn-flat"})
    </p>
    <table class="table table-bordered table-hover display card-box" id="table_id">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BranchId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryManagementId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountBalance)
            </th>

            <th>
                Actions
            </th>
        </tr>
        </thead>
        

        @foreach (var item in Model)
        {
            <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryManagementId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountBalance)
                </td>

                <td>
                    @Html.ActionLink(" Edit", "Edit", new {id = item.Id},new{@class="fa fa-pencil action-style"})
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })*@
                </td>
            </tr>
            </tbody>
            
        }

    </table>
</div>

@section ViewSpecificJavascript{
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        } );
    </script>
}
