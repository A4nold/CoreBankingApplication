@using System.Web.Optimization
@model CBApplication.Core.Models.User
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <link href="../../Content/css/style.css" rel="stylesheet" />
    <link href="../../Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="../../Content/js/plugins/jquery/jquery-3.3.1.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.js"></script>
    
</head>
<body class="background">
    <div class="se-pre-con"></div>
    <div class="container-fluid">
        <div class="row" style="text-align: center;">
            <div>
                <div class="">
                    <div class="col-md-offset-4 col-md-4 card-box">

                        <section id="loginForm">
                            @using (Html.BeginForm("Validate", "User", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4 style="text-align: center;">Please Enter Your Login Details</h4>

                                if (ViewBag.msg != null)
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        <strong>Error!&nbsp;</strong>@ViewBag.msg
                                    </div>
                                }


                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="input-group" style="margin-bottom: 25px; margin-top: 25px;">
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", id = "userTextBox", required = "required", placeholder = "Username" })
                                    <span class="input-group-addon" id="clradd"><i class="glyphicon glyphicon-user"></i></span>
                                    @Html.ValidationMessage("EmailMatchFail", new { @class = "text-danger" })
                                </div>
                                <div class="input-group" style="margin-bottom: 25px;">

                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "userTextBox", required = "required", placeholder = "Password" })
                                    <span class="input-group-addon" id="clradd"><i class="glyphicon glyphicon-lock"></i></span>
                                    @Html.ValidationMessage("PassMatchFail", new { @class = "text-danger" })
                                </div>



                                <div class="form-group">
                                    <div class="">
                                        <input type="submit" value="Log in" class="btn btn-primary btn-flat" />
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>

    </div>
    @Scripts.Render("~/Bundles/js")

    <script>
        function hideLoader() {
            $('.se-pre-con').hide();
        }

        $(window).ready(hideLoader);

        setTimeout(hideLoader, 20 * 1000);
    </script>
</body>
</html>



