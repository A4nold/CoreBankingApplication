@model IEnumerable<CBApplication.Core.Models.TellerManagement>
@{
    ViewBag.Title = "Till";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink(" Add Till", "Create",null,new{@class="fa fa-plus btn btn-primary btn-flat"})
</p>

<div style="margin-top: 10px;">
    <table class="table table-bordered table-hover display card-box" id="table_id">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountManagement.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountManagement.AccountBalance)
            </th>
        

            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountManagement.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountManagement.AccountBalance)
                </td>
            

                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })*@
                </td>
            </tr>
        }

    </table>
    @section ViewSpecificJavascript{
        <script>
            $(document).ready( function () {
                $('#table_id').DataTable();
            } );
        </script>
    }
</div>
